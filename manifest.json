{
  "manifest_version": 3,
  "name": "Easy Navigator",
  "version": "2.1",
  "description": "Open a modal with Command+E to easily navigate to all URLs",
  "permissions": [
    "tabs",
    "history",
    "bookmarks",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Easy Navigator"
  },
  "commands": {
    "open-modal": {
      "suggested_key": {
        "default": "Ctrl+E",
        "mac": "Command+E"
      },
      "description": "Open the easy navigation modal"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "128": "easy-navigator.png"
  }
}