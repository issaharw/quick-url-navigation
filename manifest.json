{
  "manifest_version": 3,
  "name": "Quick URL Navigator",
  "version": "1.0",
  "description": "Open a modal with Command+K to quickly navigate to URLs",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "history",
    "bookmarks"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Quick URL Navigator"
  },
  "commands": {
    "open-modal": {
      "suggested_key": {
        "default": "Ctrl+E",
        "mac": "Command+E"
      },
      "description": "Open URL navigation modal"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "options_page": "options.html"
}